---
import { cn } from '@/lib/utils';
import { Image } from 'astro:assets';
import Logo from '~/logo.svg';
const pathname = Astro.url.pathname;
console.log('ðŸ›‘ ~ pathname:', pathname);

const navItems = [
  { label: 'About', link: '/about' },
  { label: 'Team', link: '/team' },
  { label: 'Products', link: '/products' },
  { label: 'Join', link: '/join' },
  { label: 'Contact', link: '/contact' },
];
---

<section class='absolute top-0 z-40 inset-x-0 h-32'>
  <nav
    class='absolute h-32 container inset-x-0 flex justify-between items-center'
  >
    <a href='/'>
      <Image src={Logo} alt={'logo'} />
    </a>
    <ul class='flex items-center gap-12 max-md:hidden'>
      {
        navItems.map((el) => (
          <a
            href={el.link}
            class={cn(
              'text-xl hover:text-accent transition-all text-background font-semibold',
              { 'text-accent': pathname.includes(el.link) }
            )}
          >
            {el.label}
          </a>
        ))
      }
    </ul>
  </nav>
</section>
